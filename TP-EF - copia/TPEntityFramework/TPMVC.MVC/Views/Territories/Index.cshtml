@model List<TPMVC.MVC.Models.TerritoriesView>

@{ 
    ViewBag.Title = "Territorie Page";
}

<h1>Territorios</h1>


<table class="table-responsive table table-hover">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nombre</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var territoriesViews in Model)
        {
            <tr>
                <th scope="row">@territoriesViews.id</th>
                <td>@territoriesViews.description</td>
                <td>
                    @Html.ActionLink("Borrar", "Delete", new {id = territoriesViews.id}) / 
                    @Html.ActionLink("Modificar", "InsertAndUpdate", new {id = territoriesViews.id })
                </td>
                
            </tr>
        }
    </tbody>
</table>

<div>
    @Html.ActionLink("Insertar nuevo territorio", "InsertAndUpdate")
</div>